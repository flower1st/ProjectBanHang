@model WebBanHang.Models.SANPHAM

@{
    ViewBag.Title = "ChiTiet San Pham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;color:red">THÔNG TIN CHI TIẾT SẢN PHẨM</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Sản Phẩm:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tensanpham)
        </dd>

        <dt>
            Thương Hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.THUONGHIEU.TenTH)
        </dd>

        <dt>
            Loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAISP.TenLoai)
        </dd>


        <dt>
            Giá Bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Giaban) VNĐ
        </dd>



        <dt>
            Ảnh Bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/ImagesSP/" + Model.Anhbia)" width="120px" />
        </dd>


        <dt>
            Mô Tả:
        </dt>

        <dd style="width:600px;text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Số Lượng Còn Lại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Ngày Cập Nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("ĐIỀU CHỈNH", "Suasanpham", new { id = Model.Masanpham }) |
    @Html.ActionLink("TRỞ VỀ", "Sanpham")
</p>




